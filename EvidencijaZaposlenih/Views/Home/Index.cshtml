@section Scripts {
    @Scripts.Render("~/Scripts/Skripta.js")
}

<html>
<head>
    <style>

        thead {
            background-color: yellow
        }

        button {
            width: 140px;
        }

        label {
            display: inline-block;
            width: 100px;
            text-align: left;
        }
    </style>
</head>
<body>

    <div class="container">

        <br />

        @*//info*@
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <p id="info"></p>
        </div>
        <div class="col-sm-4"></div>
        <br />



        <br />

        @*//info2*@
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <p id="info2"></p>
        </div>
        <div class="col-sm-4"></div>

        <br />

        @*pocetak*@
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <button type="button" class="btn-default img-rounded " style="  background-color: yellow " id="pocetak">Pocetak</button>
        </div>
        <div class="col-sm-4"></div>
        <br />

        @*odjava*@
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <button type="button" class="btn-default img-rounded " style="  background-color: yellow " id="odjava">odjava</button>
        </div>
        <div class="col-sm-4"></div>

        <br />

        @*dugme registracija prijava*@

        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <button type="button" class="btn-default img-rounded " style="  background-color: yellow " id="btnregpri">Registracija Prijava</button>
        </div>
        <div class="col-sm-4"></div>



        <br />
        <br />


        @*registracija prijava *@

        <form id="regpri">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="row">
                    <label>Korisnicko ime</label>
                    <input type="text" id="korime" />
                </div>
                <div class="row">
                    <label>Lozinka</label>
                    <input type="password" id="loz" />
                </div>

                <br />
                <br />


                <div class="form-group">
                    <button type="submit" value="regist" class="btn-default img-rounded  " id="btnreg" style="  background-color: yellow ">Registracija</button> <br />
                    <button type="submit" value="prij" class="btn-default img-rounded " id="btnpri">Prijava</button>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </form>



        @*pretraga*@

        <form id="pretraga">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <h4>Pretraga zaposlenih po godini zaposlenja</h4>
                <div class="row">
                    <label a>Od:</label>
                    <input type="number" id="od" />

                    <label>Do:</label>
                    <input type="number" id="do" />

                    <button type="submit" class="btn-default img-rounded">Pretraga</button>
                </div>
            </div>
            <div class="col-sm-1"></div>

        </form>



        <br />
        <br />

        <div class="col-sm-1"></div>
        <div class="col-sm-10" id="tablecont"></div>
        <div class="col-sm-1"></div>

        <br />
        <br />

        @*izmena*@

        <form id="izmena">
            @*<div class="col-sm-3"></div>*@
            <div class="col-sm-6">
                <h3>Izmena zaposlenih</h3>
                <br />
                <div class="row">
                    <label>Kompanija:</label>
                    <select class="visible-lg-inline-block" id="izmenakompanije"></select>
                </div>
                <div class="row">
                    <label>Ime i Prezime:</label>
                    <input type="text" id="izmenaimena" />
                </div>
                <div class="row">
                    <label>Godina rodjenja:</label>
                    <input type="number" id="izmenagodrodjenja" />
                </div>
                <div class="row">
                    <label>Godina zaposlenja:</label>
                    <input type="number" id="izmenagodzaposlenja" />
                </div>
                <div class="row">
                    <label>Plata:</label>
                    <input type="number" id="izmenaplate" />
                </div>
                <input type="hidden" id="editid" />
                <br />

                <div class="row">
                    <button type="submit" class="btn-default img-rounded" style="  background-color: yellow " yellow>Izmena</button>
                    <button type="button" class="btn-default img-rounded" id="izmenaodustajanje">Odustajanje</button>
                </div>


            </div>
            @*<div class="col-sm-3"></div>*@
        </form>



        @*dodavanje*@

        <form id="dodavanje">
            @*<div class="col-sm-3"></div>*@
            <div class="col-sm-6">
                <h3>Dodavanje zaposlenih</h3>
                <br />
                <div class="row">
                    <label>Kompanija:</label>
                    <select class="visible-lg-inline-block" id="dodavanjekompanije"></select>
                </div>
                <div class="row">
                    <label>Ime i Prezime:</label>
                    <input type="text" id="dodavanjeimena" />
                </div>
                <div class="row">
                    <label>Godina rodjenja:</label>
                    <input type="number" id="dodavanjegodrodjenja" />
                </div>
                <div class="row">
                    <label>Godina zaposlenja:</label>
                    <input type="number" id="dodavanjegodzaposlenja" />
                </div>
                <div class="row">
                    <label>Plata:</label>
                    <input type="number" id="dodavanjeplate" />
                </div>

                <br />

                <div class="row">
                    <button type="submit" class="btn-default img-rounded" style="  background-color: yellow " yellow>Dodaj</button>
                    <button type="button" class="btn-default img-rounded" id="izmenaodustajanje2">Odustajanje</button>
                </div>


            </div>
            @*<div class="col-sm-3"></div>*@
        </form>













    </div> @*poslednji div*@

</body>
</html>

